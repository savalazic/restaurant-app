<% include ../partials/header %>

<div class='container'>

  <div class=''>


    <div style='max-width: 600px; margin: 50px auto;'>
      <h1 class='text-center'>Edit <%= restaurant.name %></h1>
      <form class='form' action='/restaurants/<%= restaurant._id %>/?_method=PUT' method='POST'>
        <div class='form-group'>
          <input class='form-control' type='text' name='restaurant[name]' value='<%= restaurant.name %>' />
        </div>
        <div class='form-group'>
          <input class='form-control' type='text' name='restaurant[image]' value='<%= restaurant.image %>' />
        </div>
        <div class='form-group'>
          <input class='form-control' type='text' name='restaurant[workingTime]' value='<%= restaurant.workingTime %>' />
        </div>
        <div class='form-group'>
          <input class='form-control' type='tel' name='restaurant[phone]' value='<%= restaurant.phone %>' />
        </div>
        <div class='form-group'>
          <input class='form-control' type='email' name='restaurant[email]' value='<%= restaurant.email %>' />
        </div>
        <div class='form-group'>
          <input class='form-control' type='text' name='restaurant[address]' value='<%= restaurant.address %>' />
        </div>
        <div class='form-group'>
          <textarea class='form-control' name='restaurant[description]'><%= restaurant.description %></textarea>
        </div>
        <div class='form-group'>
          <button class='btn primary btn-lg btn-block'>Submit</button>
        </div>
      </form>
      
      <a href='/restaurants'>Go Back</a>
    
    </div>
    
  </div>

</div>

<% include ../partials/footer %>