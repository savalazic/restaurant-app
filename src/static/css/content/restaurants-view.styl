.restaurants-header
  padding 100px 0
  background linear-gradient(rgba($black, .7), rgba($black, .7)), url('https://images.pexels.com/photos/213661/pexels-photo-213661.jpeg?w=1260&h=750&auto=compress&cs=tinysrgb') no-repeat center center
  background-size cover

  h1
    color $white
    font-size 50px
    letter-spacing 4px

    @media (max-width: $mobile)
      font-size 30px

  p
    color $white
    font-size 20px
    font-weight 200
    margin-bottom 40px

