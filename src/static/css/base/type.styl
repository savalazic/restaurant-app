/**
 * Typography
 * ----------
 * Basic styles for textual elements.
 */

h1
  font-weight 600

h2
  font-weight 600
  

strong
  font-weight 600

/**
 * Paragraph styles
 */
p
  font-size 16px
  line-height 1.5

a
  color inherit
  text-decoration none
  outline none !important
  transition all 400ms

  &:hover,
  &:active,
  &:focus
    text-decoration none
    color $primary

