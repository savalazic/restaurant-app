/**
 * Remove tap highlight color (iOS)
 * from all elements on site.
 */
*
  -webkit-tap-highlight-color transparent

/**
 * Remove user-select from
 * from clickable elements.
 */
img, a, .button, .link
  user-select none

img
  width 100%
  max-width 100%