/**
 * Video layer
 */

.layer.video
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  overflow hidden
  pointer-events none

  & > .col
    position absolute
    top 0
    left 0
    right 0
    bottom 0

    video
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      border none
      width 1000%
      left -450%
